            android:layout_alignStart="@+id/imageViewDealer06"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/ace_of_spades"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/imageViewDealer08"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageViewDealer07"
            android:contentDescription="@string/ace_of_spades"
            android:layout_marginStart="15dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/imageViewDealer09"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageViewDealer08"
            android:contentDescription="@string/ace_of_spades"
            android:layout_marginStart="15dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/imageViewDealer10"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageViewDealer09"
            android:contentDescription="@string/ace_of_spades"
            android:layout_marginStart="15dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/imageViewDealer11"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageViewDealer10"
            android:contentDescription="@string/ace_of_spades"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_weight="0.27">

        <TextView
            android:text="@string/dealerTotal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:id="@+id/dealerTotal_textView" />

        <TextView
            android:text="@string/playerTotal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_marginBottom="5dp"
            android:id="@+id/playerTotal_textView" />

        <TextView
            android:text="@string/bank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:textSize="25sp"
            android:id="@+id/bank_textView" />

        <TextView
            android:text="@string/bank_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="25sp"
            android:layout_below="@+id/bank_textView"
            android:layout_alignStart="@+id/bank_textView" />

        <TextView
            android:text="@string/bet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bet_textView"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp" />

        <TextView
            android:text="Bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_above="@+id/bet_textView"
            android:layout_alignStart="@+id/bet_textView" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/playerTotal_textView"
            android:id="@+id/message_imageView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#087A61"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/winner"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/winMessage_imageView"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="0.30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/spades_ace"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/player1_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/spades_king"
            android:id="@+id/player2_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/player1_imageView"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/player3_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/player2_imageView"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/player4_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/player3_imageView"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart_ace"
            android:id="@+id/player5_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/player4_imageView"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/player6_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/player5_imageView"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart_ace"
            android:id="@+id/player7_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/player6_imageView"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/player8_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/player7_imageView"
            android:layout_marginStart="15dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/player9_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/player8_imageView"
            android:layout_marginStart="15dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/player10_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/player9_imageView"
            android:layout_marginStart="15dp"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ace"
            android:id="@+id/player11_imageView"
            android:contentDescription="@string/ace_of_spades"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/player10_imageView"
            android:layout_marginStart="15dp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <TextView
        android:text="@string/click_coins_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.03"
        android:textSize="24sp"
        android:textAlignment="center"
        android:elegantTextHeight="false"
        android:gravity="center_vertical"
        android:textColor="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coin_25"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/coin5_imageButton"
            android:layout_marginStart="37dp"
            android:id="@+id/coin25_imageButton"
            android:contentDescription="@string/coins25"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coin_50"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/coin25_imageButton"
            android:layout_marginStart="37dp"
            android:id="@+id/coin50_imageButton"
            android:contentDescription="@string/coins50"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coin_100"
            android:layout_marginStart="37dp"
            android:id="@+id/coin100_imageButton"
            android:contentDescription="@string/coins100"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/coin50_imageButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coin_5a"
            android:id="@+id/coin5_imageButton"
            android:contentDescription="@string/coins5"
            android:scaleType="fitCenter"
            android:layout_marginStart="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:cropToPadding="false"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.18">

        <Button
            android:text="@string/deal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:layout_toStartOf="@+id/hit_button"
            android:id="@+id/deal_button" />

        <Button
            android:text="@string/hit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hit_button"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:layout_alignBaseline="@+id/stay_button"
            android:layout_alignBottom="@+id/stay_button"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/stay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stay_button"
            android:layout_alignBaseline="@+id/deal_button"
            android:layout_alignBottom="@+id/deal_button"
            android:layout_toEndOf="@+id/hit_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp" />
    </RelativeLayout>

</LinearLayout>